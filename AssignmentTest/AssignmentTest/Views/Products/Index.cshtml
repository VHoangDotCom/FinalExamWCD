@model PagedList.IPagedList<AssignmentTest.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Ajax.BeginForm("IndexAjax", "Products", new AjaxOptions()
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    OnFailure = "failedID",
    LoadingElementId = "loadingId",
    UpdateTargetId = "resultId",
}))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="hidden" name="sortOrder" value="@Request.QueryString["sortOrder"]" />

        <input type="submit" value="Search" id="btn-submit" />
    </p>
}
<img id="ajax-loader" width="50" src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fcommons.wikimedia.org%2Fwiki%2FFile%3AAjax_loader_metal_512.gif&psig=AOvVaw0qO-PDXotvB_T3NmxcX2g7&ust=1646274259315000&source=images&cd=vfe&ved=0CAsQjRxqFwoTCNjL7NmvpvYCFQAAAAAdAAAAABAJ" style="display:none" />


<div id="resultId">
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Category Name", "Index", new { sortOrder = ViewBag.CategorySortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Product Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

<!-- Ajax Page-->
@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $("input[name=SearchString]").on("keyup change", function (e) {
                $("#btn-submit").click();
            })


        })
    </script>
    <script>
        $(function () {
            $("#addToCart").click(function () {
                var model = {};
                model.Id = $('#productid').val();
                model.quantity = $('#quantity').val();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddToCart", "ShoppingCart")",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.code == 200) {
                            alert("Thêm giỏ hàng thành công!")
                        }
                    },
                    error: function (data) {
                    }
                })
            })
        })
    </script>
}
